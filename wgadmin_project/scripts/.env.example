# WireGuard Admin - Environment Configuration
# Copy this file to .env and fill in the values
# The .env file should be in the project root (same level as requirements.txt)
# NEVER commit the actual .env file to version control!

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Generate a new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=change-me-to-a-secure-random-string

# Set to False in production!
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE (optional - defaults to SQLite)
# =============================================================================
# For SQLite (default):
# DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/wgadmin

# =============================================================================
# WIREGUARD SETTINGS
# =============================================================================

# Path to WireGuard server configuration
WG_CONFIG_PATH=/etc/wireguard/wg0.conf

# WireGuard interface name
WG_INTERFACE=wg0

# Directory containing management scripts (leave empty for default)
WG_SCRIPTS_DIR=

# Client configuration storage
WG_CLIENT_CONFIG_DIR=/etc/wireguard/client

# Public directory for downloadable configs
WG_PUBLIC_CONF_DIR=/var/www/wireguard/conf

# QR code output directory
WG_QR_DIR=/var/www/wireguard/qr

# Use sudo for script execution (recommended for production)
WG_USE_SUDO=True

# Path to sudo binary
WG_SUDO_BIN=sudo

# Script execution timeout in seconds
WG_SCRIPT_TIMEOUT=15

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=UTC

# =============================================================================
# SECURITY SETTINGS (for production with HTTPS)
# =============================================================================
# Enable these when using nginx with HTTPS:

# Redirect HTTP to HTTPS
SECURE_SSL_REDIRECT=False

# Secure cookies (only over HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# HSTS settings
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Trust proxy headers (enable if behind nginx/reverse proxy)
TRUST_PROXY_HEADERS=False

# CSRF trusted origins (comma-separated, include https://)
CSRF_TRUSTED_ORIGINS=

# =============================================================================
# PRODUCTION EXAMPLE
# =============================================================================
# Uncomment and modify for production deployment:
#
# DJANGO_SECRET_KEY=your-very-long-random-secret-key-here
# DJANGO_DEBUG=False
# DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# TRUST_PROXY_HEADERS=True
# CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com