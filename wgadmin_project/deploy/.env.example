# WireGuard Admin - Environment Configuration
# Copy this file to /var/www/wgadmin/.env and fill in the values
# NEVER commit the actual .env file to version control!

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Generate a new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=change-me-to-a-secure-random-string

# Set to false in production!
DJANGO_DEBUG=false

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# =============================================================================
# WIREGUARD SETTINGS
# =============================================================================

# Path to WireGuard server configuration
WG_CONFIG_PATH=/etc/wireguard/wg1.conf

# WireGuard interface name
WG_INTERFACE=wg1

# Directory containing management scripts
WG_SCRIPTS_DIR=/var/www/wgadmin/wgadmin_project/scripts

# Client configuration storage
WG_CLIENT_CONFIG_DIR=/etc/wireguard/client

# Public directory for downloadable configs
WG_PUBLIC_CONF_DIR=/var/www/wireguard/conf

# QR code output directory
WG_QR_DIR=/var/www/wireguard/qr

# WireGuard server endpoint (auto-detected if not set)
# WG_ENDPOINT=1.2.3.4

# WireGuard port
WG_ENDPOINT_PORT=51830

# DNS server for client configs
WG_DNS=1.1.1.1

# Use sudo for script execution (recommended for production)
WG_USE_SUDO=true

# Path to sudo binary
WG_SUDO_BIN=sudo

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=UTC

# =============================================================================
# DATABASE (optional - defaults to SQLite)
# =============================================================================
# For PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/wgadmin

# =============================================================================
# SECURITY SETTINGS (for production with HTTPS)
# =============================================================================
# These are recommended for production with nginx handling HTTPS:
# SECURE_SSL_REDIRECT=true
# SESSION_COOKIE_SECURE=true
# CSRF_COOKIE_SECURE=true
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=true
# SECURE_HSTS_PRELOAD=true